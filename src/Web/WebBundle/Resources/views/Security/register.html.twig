<div id="div_RBZ_registerPopup" style="{{ block('STYLE') }}">
    <div id="div_RBZ_content" class="RBZ_{{ app.request.locale }}">
        <div id="div_RBZ_logo">
            <div id="div_RBZ_close">&#735;</div>
            <img src="{{ asset('/bundles/webweb/images/default/login/login_rubizz_red.png') }}">
            <h3 class="RBZ_linesSided RBZ_{{ app.request.locale }}"><span>{{ "web.web.security.register.baseline" | trans }}</span></h3>
        </div>
        <div id="div_RBZ_form">
            <form action="{{ path('WebWebBundle_securityRegister') }}" method="post" {{ form_enctype(form) }}>
                {% if error is defined %}
                    <p class="RBZ_error">{{ error }}</p>
                {% endif %}
                <div class="RBZ_input">
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname, { 'value' : last_firstname }) }}
                </div>
                <div class="RBZ_input">
                    {{ form_label(form.lastname) }}
                    {{ form_widget(form.lastname, { 'value' : last_lastname }) }}
                </div>
                <div class="RBZ_input">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, { 'value' : last_email }) }}
                </div>
                <div class="RBZ_input">
                    {{ form_label(form.password) }}
                    {{ form_widget(form.password) }}
                </div>

                <input type="submit" value="{{ 'web.web.security.register.submit' | trans }}" class="RBZ_redButton"/>
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
    <div id="div_RBZ_notice">
        <span>{{ 'web.web.security.legal_terms_sentences' | trans }}&nbsp;</span><span><a href="">{{ 'web.web.security.legal_terms' | trans }}</a></span>
        <br>
        <span>{{ 'web.web.security.have_account' | trans }}&nbsp;</span><span><a class="RBZ_login" href="">{{ 'web.web.security.connect' | trans }}</a></span>
    </div>
</div>